<odoo>
    <data>

        <record id="stock_quant_hide_quant_on_hand" model="ir.ui.view">
            <field name="name">ssttock</field>
            <field name="model">stock.quant</field>
            <field name="inherit_id" ref="stock.view_stock_quant_tree_inventory_editable"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='quantity']" position="attributes">
                    <attribute name="groups">hide_on_hand_qty_inventory_adjustments.hide_quantity_adjustment</attribute>
                </xpath>

            </field>
        </record>

        <record id="hide_quantity_adjustment" model="res.groups">
            <field name="name">Hide Quantity Adjustment</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>