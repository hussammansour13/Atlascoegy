<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_oder_qoute_form" model="ir.ui.view">
        <field name="name">sale order qoute</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

        <xpath expr="//field[@name='partner_id']" position="after">
            <field name="quote_type"/>

        </xpath>

        <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="attributes">
            <attribute name="attrs">{'invisible': [('quote_type_line','=','tender')]}</attribute>
        </xpath>
        <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='price_unit']" position="after">
            <field name="quote_type_line" invisible="True"/>
        </xpath>
        </field>
        </record>
    </data>
</odoo>